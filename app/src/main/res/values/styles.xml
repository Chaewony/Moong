<resources>

	<style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
		<item name="materialThemeOverlay">@style/CustomTextInputLayoutThemeOverlay</item>
		<item name="shapeAppearanceOverlay">@style/CustomTextInputLayoutShapeAppearanceOverlay</item>
		<item name="textInputLayoutNormalSelectorDrawable">@drawable/text_input_white_background</item>
		<item name="textInputLayoutErrorDrawable">@drawable/text_input_white_background_error</item>
		<item name="boxCollapsedPaddingTop">4dp</item>
		<item name="boxStrokeWidth">0dp</item>
		<item name="boxStrokeWidthFocused">0dp</item>
		<item name="hintEnabled">true</item>
		<item name="android:theme">@style/exampleCursor</item>
	</style>

	<style name="exampleCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
		<item name="colorControlActivated">@color/cursor_green</item>
	</style>

	<style name="CustomTextInputLayoutThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
		<item name="editTextStyle">@style/CustomTextInputLayoutEditTextStyle</item>
	</style>

	<style name="CustomTextInputLayoutEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
		<!-- Padding values that total 34dp to visually match the spec. -->
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

	<style name="CustomTextInputLayoutShapeAppearanceOverlay" parent="">
		<item name="cornerSizeBottomLeft">4dp</item>
		<item name="cornerSizeBottomRight">4dp</item>
	</style>

	<style name="TabText" parent="TextAppearance.Design.Tab">
		<item name="fontFamily">@font/nanum_square_round_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
		<item name="shapeAppearanceOverlay">@style/FabShapeStyle1</item>
	</style>

	<style name="FabShapeStyle1" parent="ShapeAppearance.MaterialComponents.SmallComponent">
		<item name="cornerSize">12dp</item>
		<item name="cornerFamilyTopLeft">rounded</item>
		<item name="cornerFamilyTopRight">rounded</item>
		<item name="cornerFamilyBottomLeft">rounded</item>
		<item name="cornerFamilyBottomRight">rounded</item>
	</style>


</resources>